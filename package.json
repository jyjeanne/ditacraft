{
  "name": "ditacraft",
  "displayName": "DitaCraft",
  "description": "Best way to edit and publish your DITA files - Complete DITA editing and publishing solution for VS Code",
  "version": "0.4.2",
  "publisher": "JeremyJeanne",
  "author": {
    "name": "Jeremy Jeanne",
    "email": "jyjeanne@gmail.com"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jyjeanne/ditacraft"
  },
  "bugs": {
    "url": "https://github.com/jyjeanne/ditacraft/issues"
  },
  "homepage": "https://github.com/jyjeanne/ditacraft#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "dita",
    "xml",
    "technical-writing",
    "documentation",
    "publishing",
    "dita-ot",
    "bookmap",
    "ditamap"
  ],
  "activationEvents": [
    "onLanguage:dita",
    "onCommand:ditacraft.validate",
    "onCommand:ditacraft.publish",
    "onCommand:ditacraft.newTopic",
    "onCommand:ditacraft.newMap",
    "onCommand:ditacraft.newBookmap",
    "onCommand:ditacraft.configureDitaOT",
    "workspaceContains:**/*.dita",
    "workspaceContains:**/*.ditamap",
    "workspaceContains:**/*.bookmap"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dita",
        "aliases": [
          "DITA",
          "dita"
        ],
        "extensions": [
          ".dita",
          ".ditamap",
          ".bookmap"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dita",
        "scopeName": "text.xml.dita",
        "path": "./syntaxes/dita.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "ditacraft.validate",
        "title": "DITA: Validate Current File",
        "icon": "$(check)"
      },
      {
        "command": "ditacraft.publish",
        "title": "DITA: Publish (Select Format)",
        "icon": "$(export)"
      },
      {
        "command": "ditacraft.publishHTML5",
        "title": "DITA: Publish to HTML5",
        "icon": "$(globe)"
      },
      {
        "command": "ditacraft.previewHTML5",
        "title": "DITA: Preview HTML5",
        "icon": "$(open-preview)"
      },
      {
        "command": "ditacraft.newTopic",
        "title": "DITA: Create New Topic"
      },
      {
        "command": "ditacraft.newMap",
        "title": "DITA: Create New Map"
      },
      {
        "command": "ditacraft.newBookmap",
        "title": "DITA: Create New Bookmap"
      },
      {
        "command": "ditacraft.configureDitaOT",
        "title": "DITA: Configure DITA-OT Path"
      },
      {
        "command": "ditacraft.setupCSpell",
        "title": "DITA: Setup cSpell Configuration"
      },
      {
        "command": "ditacraft.showLogFile",
        "title": "DITA: Show Log File Location"
      },
      {
        "command": "ditacraft.openLogFile",
        "title": "DITA: Open Log File"
      },
      {
        "command": "ditacraft.showOutputChannel",
        "title": "DITA: Show Output Channel"
      },
      {
        "command": "ditacraft.clearOutputChannel",
        "title": "DITA: Clear Output Channel"
      },
      {
        "command": "ditacraft.showBuildOutput",
        "title": "DITA: Show Build Output"
      },
      {
        "command": "ditacraft.showMapVisualizer",
        "title": "DITA: Show Map Visualizer",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "ditacraft.testLogger",
        "title": "DITA: Test Logger (Debug)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ditacraft.validate",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap",
          "group": "navigation@1"
        },
        {
          "command": "ditacraft.previewHTML5",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap",
          "group": "navigation@2"
        },
        {
          "command": "ditacraft.showMapVisualizer",
          "when": "resourceExtname == .ditamap || resourceExtname == .bookmap",
          "group": "navigation@3"
        },
        {
          "command": "ditacraft.publish",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap",
          "group": "navigation@4"
        }
      ],
      "editor/context": [
        {
          "command": "ditacraft.validate",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap",
          "group": "ditacraft@1"
        },
        {
          "command": "ditacraft.publish",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap",
          "group": "ditacraft@2"
        }
      ],
      "commandPalette": [
        {
          "command": "ditacraft.validate",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap"
        },
        {
          "command": "ditacraft.publish",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap"
        },
        {
          "command": "ditacraft.publishHTML5",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap"
        },
        {
          "command": "ditacraft.previewHTML5",
          "when": "resourceLangId == dita || resourceExtname == .dita || resourceExtname == .ditamap || resourceExtname == .bookmap"
        },
        {
          "command": "ditacraft.showMapVisualizer",
          "when": "resourceExtname == .ditamap || resourceExtname == .bookmap"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ditacraft.validate",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == dita || resourceExtname == .dita"
      },
      {
        "command": "ditacraft.previewHTML5",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "resourceLangId == dita || resourceExtname == .dita"
      },
      {
        "command": "ditacraft.publish",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "resourceLangId == dita || resourceExtname == .dita"
      }
    ],
    "configuration": {
      "title": "DitaCraft",
      "properties": {
        "ditacraft.ditaOtPath": {
          "type": "string",
          "default": "",
          "description": "Path to DITA-OT installation directory (e.g., C:\\DITA-OT or /usr/local/dita-ot). Leave empty to use system PATH.",
          "order": 1
        },
        "ditacraft.defaultTranstype": {
          "type": "string",
          "default": "html5",
          "enum": [
            "html5",
            "pdf",
            "xhtml",
            "epub",
            "htmlhelp",
            "markdown"
          ],
          "description": "Default output format for DITA-OT publishing.",
          "order": 2
        },
        "ditacraft.outputDirectory": {
          "type": "string",
          "default": "${workspaceFolder}/out",
          "description": "Directory where published files will be saved. Supports ${workspaceFolder} variable.",
          "order": 3
        },
        "ditacraft.autoValidate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically validate DITA files on save.",
          "order": 4
        },
        "ditacraft.previewAutoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh HTML5 preview when file is saved.",
          "order": 5
        },
        "ditacraft.previewTheme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "enumDescriptions": [
            "Follow VS Code's current theme",
            "Always use light theme",
            "Always use dark theme"
          ],
          "description": "Theme for the HTML5 preview panel.",
          "order": 6
        },
        "ditacraft.previewCustomCss": {
          "type": "string",
          "default": "",
          "description": "Path to a custom CSS file to apply to the preview. Supports ${workspaceFolder} variable.",
          "order": 7
        },
        "ditacraft.previewScrollSync": {
          "type": "boolean",
          "default": true,
          "description": "Enable bidirectional scroll synchronization between the source editor and HTML5 preview.",
          "order": 8
        },
        "ditacraft.showProgressNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show progress notifications during DITA-OT processing.",
          "order": 8
        },
        "ditacraft.validationEngine": {
          "type": "string",
          "default": "typesxml",
          "enum": [
            "typesxml",
            "built-in",
            "xmllint"
          ],
          "enumDescriptions": [
            "Full DTD validation using TypesXML (recommended, pure TypeScript)",
            "Built-in validation with content model checking (no DTD, lightweight)",
            "External xmllint for DTD validation (requires libxml2 installed)"
          ],
          "description": "XML validation engine. TypesXML provides full DTD validation. Built-in provides content model checking without full DTD.",
          "order": 9
        },
        "ditacraft.ditaOtArgs": {
          "type": "array",
          "default": [],
          "description": "Additional command-line arguments to pass to DITA-OT (e.g., ['--verbose', '--filter=myfilter.ditaval']).",
          "order": 10
        },
        "ditacraft.enableSnippets": {
          "type": "boolean",
          "default": true,
          "description": "Enable DITA code snippets and auto-completion.",
          "order": 11
        },
        "ditacraft.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "description": "Logging level for debugging. Set to 'debug' to enable detailed logging.",
          "order": 12
        },
        "ditacraft.enableFileLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable logging to file in system temp directory. Only active when logLevel is set to 'debug'.",
          "order": 13
        },
        "ditacraft.enableConsoleLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable logging to Output channel in VS Code.",
          "order": 14
        },
        "ditacraft.validationDebounceMs": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Debounce delay (in milliseconds) before validating a file after changes. Lower values provide faster feedback but may impact performance.",
          "order": 15
        },
        "ditacraft.keySpaceCacheTtlMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 30,
          "description": "Time-to-live (in minutes) for cached key space data. Increase for better performance with large DITA projects.",
          "order": 16
        },
        "ditacraft.ditaOtTimeoutMinutes": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 30,
          "description": "Maximum time (in minutes) to wait for DITA-OT processing to complete before timing out.",
          "order": 17
        },
        "ditacraft.maxLinkMatches": {
          "type": "number",
          "default": 10000,
          "minimum": 1000,
          "maximum": 100000,
          "description": "Maximum number of link matches to process per file. Increase for very large DITA files.",
          "order": 18
        }
      }
    },
    "snippets": [
      {
        "language": "dita",
        "path": "./snippets/dita.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "npm run check-types && npm run esbuild-base -- --sourcemap",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package",
    "esbuild-base": "node esbuild.js",
    "check-types": "tsc --noEmit",
    "pretest": "npm run compile-tests && npm run lint",
    "compile-tests": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "coverage": "npx c8 npm test",
    "coverage:check": "npx c8 check-coverage",
    "coverage:report": "npx c8 report --reporter=html --reporter=text --reporter=lcov"
  },
  "c8": {
    "include": [
      "out/**/*.js"
    ],
    "exclude": [
      "out/test/**",
      "**/*.test.js",
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "report-dir": "coverage",
    "temp-directory": ".c8_output",
    "clean": true,
    "all": false,
    "check-coverage": true,
    "lines": 62,
    "statements": 62,
    "functions": 65,
    "branches": 73
  },
  "nyc": {
    "_NOTE": "nyc does not work with VS Code extension tests - use c8 instead",
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "out/**/*.js"
    ],
    "exclude": [
      "out/test/**",
      "out/**/*.test.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true,
    "report-dir": "coverage",
    "temp-dir": ".nyc_output",
    "check-coverage": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 70
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^25.0.10",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.53.1",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^3.7.1",
    "c8": "^10.1.3",
    "esbuild": "^0.27.2",
    "eslint": "^8.50.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "sinon": "^21.0.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "fast-xml-parser": "^5.3.4",
    "typesxml": "^1.17.0"
  }
}
